<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:textSize="50sp"
        android:text="Nova Tarefa"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:textColor="#4689C8"
        android:textStyle="bold" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="25sp" />

    <EditText
        android:id="@+id/titulo_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25sp" />

    <EditText
        android:id="@+id/data_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selecionar Data"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25sp" />

    <TextView
        android:id="@+id/title_text_vie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="sp"
        android:text=" Prioridade"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:textColor="#4689C8"
        android:textStyle="bold" />
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/baixa_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baixa"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#4689C8"
            android:layout_marginRight="20dp"/>



        <RadioButton
            android:id="@+id/medio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#4689C8"
            android:layout_marginRight="20dp"/>

        <RadioButton
            android:id="@+id/alta_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alta"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#4689C8"
            android:layout_marginRight="20dp"/>
    </RadioGroup>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="50dp"
        android:background="#1E90FF"
        android:textColor="#FFF"/>
</LinearLayout>